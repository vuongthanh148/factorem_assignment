version: '3'

services:
  razer-assessment:
    build: .
    image: razer-assessment
    environment:
    ports:
      - '3000:3000'
    depends_on:
      - mongodb
    volumes:
      - .:/usr/src/razer-assessment
    networks:
      - razer-network

volumes:
  dbdata:

networks:
  razer-network:
    driver: bridge
